                $('#rejectedApprovalRequests').html('<h5>Rejected Approval Requests</h5> <br/>' + data);
                HideProgress();
            },
            error: function () {
                Swal.fire("There is some problem to process your request. Please try after some time");
                HideProgress();
            }
        });
    }

    function Notifications() {
