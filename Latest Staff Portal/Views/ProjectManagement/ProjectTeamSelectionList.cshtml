@model IEnumerable<Latest_Staff_Portal.ViewModel.ProjectTeamSelections>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>No </th>
                <th>Project Name</th>
                @* <th>Geographical Unit Name </th>*@
                <th>Team Lead</th>
                <th>Selection Lead Area</th>
              

            </tr>
            </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.No');" style="background: #162f25; color: whitesmoke; border-radius: 10px; border: none; padding: 5px 10px; cursor: pointer;" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Project_Name)
                    </td>
                  
                   @* <td>
                        @Html.DisplayFor(modelItem => item.Geographical_Unit_Name)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Team_Lead)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section_Lead_Area)
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>

<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>