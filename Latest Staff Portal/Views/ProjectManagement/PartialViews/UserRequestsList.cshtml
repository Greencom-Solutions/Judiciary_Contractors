@model IEnumerable<Latest_Staff_Portal.ViewModel.ProjectProposals>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>No</th>
                <th>Name</th>
                @* <th>Global Dimension 2 Code</th>*@
                <th>Administration Unit Name</th>
                <th>County Name</th>
                <th>Sub County Name</th>
                <th>Request Source</th>
                <th>Created By</th>
                @* <th>Employee No</th>
                    <th>Employee Name</th>*@
                <th>Status</th>
                <th>Request Status</th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.No');" style="background: #162f25; color: whitesmoke; border-radius: 10px; border: none; padding: 5px 10px; cursor: pointer;" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Global_Dimension_2_Code)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Administration_Unit_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.County_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Sub_County_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Request_Source)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_By)
                    </td>
                    @*  <td>
                            @Html.DisplayFor(modelItem => item.Employee_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee_Name)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Request_Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>