@model Latest_Staff_Portal.ViewModel.StakeholderFeedback



<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Suggestion, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Suggestion, new { htmlAttributes = new { @class = "form-control",@id= "Suggestion" } })
            @Html.ValidationMessageFor(model => model.Suggestion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @id = "Location" } })
            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Proponent, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(m => m.Proponent, Model.ListOfEmployees, "--Select Option--", new { @class = "form-control select2", @id = "Proponent" })
            @Html.ValidationMessageFor(model => model.Proponent, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Status_Of_Suggestion, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(m => m.Status_Of_Suggestion, Model.ListOfStatus, "--Select Option--", new { @class = "form-control select2", @id = "Status_Of_Suggestion" })
            @Html.ValidationMessageFor(model => model.Status_Of_Suggestion, "", new { @class = "text-danger" })
        </div>
    </div>  
</div>

<script>
    $(document).ready(function () {
        $("#Proponent").select2({
            width: '100%'
        });
    });
</script>
