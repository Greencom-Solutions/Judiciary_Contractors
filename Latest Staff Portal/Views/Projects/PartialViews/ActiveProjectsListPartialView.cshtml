@model IEnumerable<Latest_Staff_Portal.ViewModel.ActiveProjects>



<style>
    #datatable-buttons th, #datatable-buttons td {
        white-space: nowrap; /* Prevent text from wrapping */
    }
</style>
<div class="table-responsive">
    <table id="datatable-buttons" class="table dt-responsive nowrap"
           style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color: #183424; color: white">
            <tr>
                <th>Action</th>
                <th>No</th>
                <th>Description</th>
                <th>Project Code</th>
                <th>Project Sum</th>
                <th>Contract Agreement Date</th>
                <th>Intended Completion Date</th>
                <th>Sell to Customer No</th>
                <th>Sell to Customer Name</th>
                <th>Search Description</th>
                <th>Person Responsible</th>
                <th>Grant Amount</th>
                <th>Contract Amount</th>
                <th>Projected Monthly Cashflow</th>
                <th>Actual Monthly Cashflow</th>
                <th>Cashflow Variance</th>
                <th>Status</th>
                <th>Bill to Customer No</th>
                <th>Bill to Name</th>
                <th>Starting Date</th>
                <th>Ending Date</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.No');" style="background: #162f25; color: whitesmoke; border-radius: 10px; border: none; padding: 5px 10px; cursor: pointer;" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.No)              @* this*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)     @* this*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project_Sum)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Contract_Agreement_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Intended_Completion_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sell_to_Customer_No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sell_to_Customer_Name)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.Search_Description)      @* this*@
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Person_Responsible)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Grant_Amount)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Contract_Amount)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Projected_Monthly_Cashflow)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actual_Monthly_Cashflow)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cashflow_Variance)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Bill_to_Customer_No)      @* this*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bill_to_Name)      @* this*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Starting_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ending_Date)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>