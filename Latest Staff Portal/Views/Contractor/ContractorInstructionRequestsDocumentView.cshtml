            @{
                if (@Model.Status == "New")
                {
                    <button class="btn btn-primary" style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="SubmitRequest('@Model.No');">
                        <i class="fa fa-check" aria-hidden="true"></i> Submit Request
                    </button>
                }
                if (Model.isManager)
                {
                    if (@Model.Status == "Submitted")
                    {


                        <button style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="ReceiveContractorExtensionRequest('@Model.No');">
                            <i class="fa fa-check" aria-hidden="true"></i> Receive
                        </button>
                    }

                    if (@Model.Status == "Received" && !@Model.Sent_to_Ast_Directors)
                    {
                        <button style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="SendExtensionReqToAssistantDirector('@Model.No');">
                            <i class="fa fa-check" aria-hidden="true"></i>Send To Assistant Director
                        </button>
                    }
                }

                if (@Model.Status == "Team Approval" && Model.Team_Approval_Status == "New" && @loggedInUserID == Model.Current_Approving_Member)
                {
                    <button style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="SubmitToTeamLeadForApproval('@Model.No');">
                        <i class="fa fa-check" aria-hidden="true"></i>Submit To Team Lead For Approval
                    </button>
                }


                if (@Model.Status == "Team Approval" && @Model.Team_Approval_Status == "Submitted" && @loggedInUserID == Model.Asssigning_Employee)
                {
                    <button class="btn btn-primary btn-sm" style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="TeamLeadApproveExtSubmission('@Model.No');">
                        <i class="fa fa-check" aria-hidden="true"></i>Approve Submission
                    </button>

                    <button class="btn btn-danger btn-sm" style="color: whitesmoke; border-radius: 10px" onclick="TeamLeadRejectExtSubmission('@Model.No');">
                        <i class="fa fa-close" aria-hidden="true"></i>Reject Submission
                    </button>
                }

                if (@Model.Status == "PM" && @Model.isManager)
                {
                    <button class="btn btn-primary btn-sm" style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="ApproveAndSubmitToCRJ('@Model.No');">
                        <i class="fa fa-check" aria-hidden="true"></i>Approve and Submit To CJ
                    </button>

                    <button class="btn btn-danger btn-sm" style="color: whitesmoke; border-radius: 10px" onclick="PMRejectSubmission('@Model.No');">
                        <i class="fa fa-close" aria-hidden="true"></i>PM Reject Submission
                    </button>
                }

                if (@Model.Status == "CRJ" && @Model.isManager)
                {
                    <button class="btn btn-primary btn-sm" style="background: #162f25; color: whitesmoke; border-radius: 10px" onclick="SendToSupplyChain('@Model.No');">
                        <i class="fa fa-check" aria-hidden="true"></i>Send To Supply Chain
                    </button>

                    <button class="btn btn-danger btn-sm" style="color: whitesmoke; border-radius: 10px" onclick="CRJRejectSubmission('@Model.No');">
                        <i class="fa fa-close" aria-hidden="true"></i>CRJ Reject Submission
                    </button>
                }
            }
